#1. Add integer values of an array
arr = [1, 2, 3, 4]
sum_arr = sum(arr)
print("Sum of array:", sum_arr)


#2. Calculate the average value of an array of integers
arr = [1, 2, 3, 4]
average = sum(arr) / len(arr) 
print("Average of array:", average)


#3. Find the index of an array element
arr = [1, 2, 3, 4]
element = 3
if element in arr:
    index = arr.index(element)
    print("Index of element:", index)
else:
    print("element not found in the array")


#4. Test if array contains a specific value
    arr = [1, 2, 3, 4]
value = 3
if value in arr:
    print("value is in the array")
else:
    print("value is not in the array")

    
#5. Remove a specific element from an array
arr = [1, 2, 3, 4]
element = 3
if element in arr:
    arr.remove(element)
    print("Array after removing element:", arr)
else:
    print("element not found in the array")

    
#6.Copy an array to another array
    arr = [1, 2, 3, 4]
copied_arr = arr.copy()
print("Copied array:", copied_arr)


#7. Insert an element at a specific position in the array
arr = [1, 2, 3, 4]
index = 2
element = 99
arr.insert(index, element)
print("Array after insertion:", arr)


#8. Find the minimum and maximum value of an array
arr = [1, 2, 3, 4]
min_val = min(arr)
max_val = max(arr)
print("Minimum value:", min_val)
print("Maximum value:", max_val)


#9. Reverse an array of integer values
arr = [1, 2, 3, 4]
arr.reverse()
print("Reversed array:", arr)


#10. Find the duplicate values of an array
arr = [1, 2, 3, 4, 2, 5, 1]
duplicates = []
seen = set()
for num in arr:
    if num in seen and num not in duplicates:
        duplicates.append(num)
    seen.add(num)
print("Duplicate values:", duplicates)


#11. Find the common values between two arrays
arr1 = [1, 2, 3, 4]
arr2 = [3, 4, 5, 6]
common_values = list(set(arr1) & set(arr2))
print("Common values:", common_values)


#12. Remove duplicate elements from an array
arr = [1, 2, 3, 4, 2, 5, 1]
arr2= list(set(arr))
print("Array without duplicates:", arr2)

)


#13. Find the second largest number in an array
arr = [1, 2, 3, 4, 5]
arr_sorted = sorted(set(arr))
second_largest = arr_sorted[-2] if len(arr_sorted) > 1 else None
print("Second largest number:", second_largest)



#15. Find the number of even and odd numbers in an array
arr = [1, 2, 3, 4, 5, 6]
even_count = sum(1 for x in arr if x % 2 == 0)
odd_count = len(arr) - even_count
print("Even numbers:", even_count)
print("Odd numbers:", odd_count)


#16. Get the difference of largest and smallest value
arr = [1, 2, 3, 4, 5]
difference = max(arr) - min(arr)
print("Difference between largest and smallest:", difference)


#17. Verify if the array contains two specified elements (12, 23)
arr = [12, 5, 23, 8]
if 12 in arr and 23 in arr:
    print("Array contains 12 and 23")
else:
    print("Array does not contain both 12 and 23")

    
#18. Remove the duplicate elements and return the new array
    arr = [1, 2, 3, 4, 2, 5, 1]
arr_without_duplicates = list(dict.fromkeys(arr))
print("Array without duplicates:", arr_without_duplicates)

